@model IEnumerable<Stage_Books.Models.Author>
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Index";
}
<br />
<br />
<br />
<br />
<div class="container">
	<div class="row">
	<div class="col-md-5"></div>
	<div class="col-md-3"><h1 style="text-align:center">المؤلفين</h1></div>
	<div class="col-md-4"></div>
	</div>
</div>
<br />
	<div class="row">
	<div class="col-md-6"></div>
	<div class="col-md-2"><p><a class="btn btn-warning" asp-action="Create">اضافة جديد </a></p></div>
	<div class="col-md-4"></div>
	</div>
<br />
<br />
<div class="container">
	<div class="row">
	<div class="col-md-5"></div>
	<div class="col-md-6">
         <form method="get" asp-controller="Authors" asp-action="search">
		   <input type="text" name="search" value="@ViewBag.CurrentSearch"/>
           <button type="submit" class="btn btn-default input-group-append">Search</button> 
           </form>
		   </div>
    	<div class="col-md-1"></div>
	</div>
</div>
<br />
	<br />
	<br />
<div class="container row">
	<br />
	<br />
		@foreach (var item in Model)
		{
		<div class="col-md-1"></div>
		<div class="col-md-1"></div>
		<div class="col-md-1"></div>
		<div class="col-md-1">
		<div class="card mb-1 ml-1" style="width: 16rem;">
					<img style="height:200px;width:250px;" class="card-img-top" src="@Html.DisplayFor(modelItem => item.ImageURL)">
					<div class="card-body">
						<h5 style="text-align:center" class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
						<a class="btn btn-primary btn-block" asp-action="Details" asp-route-id="@item.ID">Details</a>
						<a class="btn btn-danger btn-block" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
						<a class="btn btn-success btn-block" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
					</div>
		</div>
		</div>
		}
</div>






