
@*@**********************************************@
@model Stage_Books.Models.magazincopys

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-10">
		<br />
		<br />
		<br />
		<br />
		   <h2 style="text-align:center"> تعديل بيانات مجلة</h2>
		<br />
		<hr />
		<br />
		<div class="container">
			 <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-6">
            <div class="form-group">
                <label asp-for="copydate" class="control-label"></label>
                <input asp-for="copydate" class="form-control" />
                <span asp-validation-for="copydate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Pages" class="control-label"></label>
                <input asp-for="Pages" class="form-control" />
                <span asp-validation-for="Pages" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="copyNum" class="control-label"></label>
                <input asp-for="copyNum" class="form-control" />
                <span asp-validation-for="copyNum" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="magazinesId" class="control-label"></label>
                <select asp-for="magazinesId" class="form-control" asp-items="ViewBag.magazinesId"></select>
                <span asp-validation-for="magazinesId" class="text-danger"></span>
            </div>
            <br />

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" /> | 
                <a asp-action="Index">Back to List</a>
            </div>
                </div>
            </div>
        </form>
			<br />
			<br />
		</div>
		<br />
	</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
