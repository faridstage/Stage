@model Stage_Books.Models.UserProfile

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "EditProfile";
}

<h1>EditProfile</h1>

<h4>UserProfile</h4>
<hr />
<div class="text-danger">@ViewBag.msg</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProfile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserImage" class="control-label"></label>
                <input type="file" asp-for="UserImage" class="form-control" name="img" onchange="FillImage(event);"/>
                <span asp-validation-for="UserImage" class="text-danger"></span>
                <img id="image" style="width:100px;height:100px" src="@Url.Content("/UserImages/" + Model.UserImage)"/>
            </div>
            <div class="form-group">
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserControl">Back to User Control</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
var FillImage = function(event) {
    var ima = document.getElementById('image');
    ima.src = URL.createObjectURL(event.target.files[0]);
}
    </script>
}
