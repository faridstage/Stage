@using Stage_Books.Models.Account
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<title>S T A G E</title>
	<meta name="viewport" content="width=device-width, initial-scale=6">
	<meta name="descrption" content="Best website to Find any Books">
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
		  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link href="css/style.css" rel="stylesheet">


</head>

<body>
	<!-- oncontextmenu="return false;" -->



	<br>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div style="height: 60vh;" class="shadow-lg p-3 mb-5 bg-light rounded">
					<br>
					<div class="row">
						<div class="col-md-5 col-sm-5 col-5"></div>
						<div class="text-center mb-3">
							<h1 style="color: blue;">Log in</h1>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 mb-3">
							<div class="input-group input-group-lg">
								<input asp-for="Email" type="text" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg" placeholder="Email">
								<span asp-validation-for="Email"></span>
							</div>
						</div>
					</div>
					<br>
					<div class="row">
						<div class="col-md-12 mb-3">
							<div class="input-group input-group-lg">
								<input asp-for="Password" type="password" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg" placeholder="Password">
								<span asp-validation-for="Password"></span>
							</div>
						</div>
					</div>
					<br>
					<div class="row">
						<div class="checkbox">
							<label asp-for="RememberMe">
								<input asp-for="RememberMe" />
								@Html.DisplayNameFor(m => m.RememberMe)
							</label>
							<span asp-validation-for="RememberMe"></span>
						</div>
					</div>
					<br />
					<div class="row">
						<div class="col-md-12 mb-3">
							<button type="submit" class="btn btn-primary btn-lg btn-block">Log in</button>
						</div>
					</div>
				</div>
			</form>
			<div class="row">
				<div class="col-md-6 mb-3">
					<h5>or <a href="Signup.html">Create New acount</a></h5>
				</div>
			</div>
		</div>


	</div>




