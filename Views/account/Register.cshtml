@using Stage_Books.Models.Account
@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>S T A G E</title>
	<meta name="viewport" content="width=device-width, initial-scale=6">
	<meta name="descrption" content="Best website to Find any Books">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link href="css/style.css" rel="stylesheet">
	<link rel="icon" href="img/stage_logo.png" type="" sizes="">
	<link rel="shortcut icon" href="img/stage_logo.png" type="" sizes="">
	<link rel="apple-touch-icon" href="img/stage_logo.png">
    <meta name="keywords" content=" كتب عالمية مترجمة  مكتبة,اكبر مكتبة لتحميل الكتب مجانا,اكبر مكتبة كتب,كتب,أكبر مكتبة,اكبر مكتبة للكتب الاسلامية,اكبر مكتبة شخصية,اكبر مكتبة يوغي يو,اكبر مكتبة اسلامية,اكبر مكتبة في العالم,اكبر مكتبة شخصية في العالم,اكبر مكتبة اسلامية,اهم اكبر مكتبة كتب الكترونية في العالم .,أكبر مكتبة في العالم ,كتب ادب ">
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/newstyle.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i%7CLato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
    <link href="~/img/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="~/css/mmenu.css" rel="stylesheet" type="text/css" />
    <link href="~/css/mmenu.positioning.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
   <link rel="preconnect" href="https://fonts.googleapis.com">
	 <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body oncontextmenu="return false;">
	<br>
	<br>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<form method="post" enctype="multipart/form-data">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div style="height: 120vh;" class="shadow-lg p-3 mb-5 bg-light rounded">
				<br>
				<div class="row">
					<div class="col-md-5 col-sm-5 col-5"></div>
					<div class="text-center mb-3">
						<h1 style="color: blue;">Join US</h1>
					</div>
				</div>
				<div class="row">

					<div class="text-center" style="margin: 15px auto;">
						<span style="color: red;text-align: center;font-size: 18px;">Note : Please Enter Your Data By English Language</span>

					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">

						<div class="input-group input-group-lg">
							<input asp-for="Name" type="text" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="username">
								   <span asp-validation-for="Name"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="Email" type="text" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="email">
								   <span asp-validation-for="Email"></span>
						</div>
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="Password" type="password" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="Password">
								   <span asp-validation-for="Password"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="ConfirmPassword" type="password" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="Confirm Password">
								   <span asp-validation-for="ConfirmPassword"></span>
						</div>
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="phone" type="text" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="phone number">
								   <span asp-validation-for="phone"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<select asp-for="gender" class="form-control form-control-lg">
							<option selected disabled>Gender</option>
							<option>Male</option>
							<option>Female</option>
							<option>Other</option>
						</select>
						<span asp-validation-for="gender"></span>
					</div>
				</div>
				<br>
				 <div class="row">
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="city" type="text" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="City">
								   <span asp-validation-for="city"></span>
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="Nlanguage" type="text" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="Your Mother Language">
								   <span asp-validation-for="Nlanguage"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<div class="input-group input-group-lg">
							<input asp-for="country" type="text" class="form-control" aria-label="Sizing example input"
								   aria-describedby="inputGroup-sizing-lg" placeholder="Country">
								   <span asp-validation-for="country"></span>
						</div>
					</div>
					<div class="col-md-4 mb-3" hidden>
						<div class="input-group input-group-lg">
							<input asp-for="ImageURL" type="file" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg" placeholder="Choose Image" name="imageFile" id="imageFile" accept=".png,.jpg" onchange="AddImage()">
						</div>
					</div>
					<div class="col-md-2 mb-1" hidden>
						<div class="input-group input-group-lg">
						    <img style="border-radius:50%" width="70" height="70" src="" id="userImage" />
						</div>
					</div>
					</div>
					<div class="row">
						<div class="col-md-6 mb-3">
							<div class="input-group input-group-lg">
									   <select asp-for="work" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg">
										   <option value="">Use Stage As</option>
										   <option value="1">قارىء</option>
										   <option value="2">باحث</option>
										   <option value="3">ناقد</option>
										   <option value="4">صحفى</option>
										   <option value="5">مؤلف</option>
										   <option value="6">ناشر</option>
									   </select>
									   <span asp-validation-for="work"></span>
							</div>
						</div>
						<div class="col-md-6 mb-3">
							<div class="input-group input-group-lg">
								<input asp-for="birth" type="date" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg" placeholder="Your birthday">
									   <span asp-validation-for="birth"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 mb-3">
							<button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6 mb-3">
							<h5>or <a style="margin-left:20px;" href="login.html">Log in</a></h5>
						</div>
					</div>
			</div>
			</form>
		</div>
	</div>
	<br />
	<br />
	<br />
	<script src="js/js.js"></script>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
			integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
			crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
			integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
			crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
			integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
			crossorigin="anonymous"></script>
			<script>
				function AddImage()
		   {
		   document.getElementById('userImage').src= window.URL.createObjectURL(document.getElementById('imageFile').files[0])
	       }
			
			</script>

</body>
</html>

