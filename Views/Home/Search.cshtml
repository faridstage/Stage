          <div class="container">
                    <div class="row">
                   
                        @if(!Model.Any())
                        {
                            <div class="alert alert-danger" role="alert">
                                No Data !
                            </div>
                        }
                        else
                        {
                        @foreach (var item in Model)
                       {
                            <div  class="card" style="width:auto; margin:0px auto">
                                <div class="mt-sm-3" style="margin:0px auto">
                                      <img class="" src="@item.ImageURL" alt="Card image cap" width="150" height="200">
                                </div>
                                    <div class="card-body">
                                        <h5 class="card-title" style="text-align:center">@item.Name</h5>
                                       
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        @*<li class="list-group-item" style="text-align:center">@item.Author.Name</li>*@
                                        <li class="list-group-item" style="text-align:center">@item.Language</li>
                                        <li class="list-group-item" style="text-align:center">@item.Topic</li>
                                    </ul>
                                    <div class="card-body">
                                        
                                        <a asp-controller="books" asp-action="Book_Details" asp-route-id="@item.ID" class="card-link">Details</a>
                                       
                                        <a href="#" class="card-link">Save</a>
                                        <a href="#" class="card-link mr-4" data-toggle="modal" data-target="#exampleModal">Index</a>
                                       <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                          <div class="modal-dialog">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Book Index</h5>
                                                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                   <span aria-hidden="true">&times;</span>
                                                 </button>
                                                </div>
                                                 <div class="modal-body">...</div>
                                                <div class="modal-footer">
                                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                  <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                              </div>
                                            </div>
                                         </div>
                                    </div>
                                 </div>
                                <hr />
							}
                       }

                    </div>
