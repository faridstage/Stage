	<link rel="stylesheet" href="~/Admin/cssD/dataTables.bootstrap5.min.css" />
	<link rel="stylesheet" href="~/Admin/cssD/style.css" />
	<title>Stage Dashboard</title>
	<link rel="icon" href="~/img/stage_logo.png" type="" sizes="">
	<link rel="shortcut icon" href="~/img/stage_logo.png" type="" sizes="">
	<link rel="apple-touch-icon" href="~/img/stage_logo.png">
</head>

<body oncontextmenu="return false;">
	<br />
	<br />
	<br />
	<br />
	<h2 style="text-align:center">قائمة الكتب</h2>
	<br />
	<hr />
    <div class="container">
        <div class="row">
        <div class="col-4"></div>
        <div class="col-6">
        <form method="get" asp-controller="Books" asp-action="search">
		<input type="text" name="search" value="@ViewBag.CurrentSearch"/>
        <button type="submit" class="btn btn-secondary input-group-append">Search</button>
        <a class="btn btn-primary " asp-action="Create">اضافة جديد </a>
        </form>
        </div>
        <div class="col-2"></div>
        </div>
        </div>
        <hr />
	<div class="container">
        <div class="row">

<div class="container">

</div>
<br />
<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PubDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PubDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                <img style="width:100px; height:120px;margin-left:20px" src="@Html.DisplayFor(book =>item.ImageURL)" />
            </td>
            <td>
                <a class="btn btn-warning " asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-success " asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
 </tbody>
</table>
<br />
	<hr />
	<br />
	</div>
    </div>
        </div>
           </div>
