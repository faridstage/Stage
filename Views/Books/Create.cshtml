<body oncontextmenu="return false;">
	<div class="row">
		<div class="col-md-12">
			<form asp-action="Create" enctype="multipart/form-data">
				<div asp-validation-summary="All" class="text-danger"></div>
				<main class="mt-5 pt-3">
					<div class="container-fluid">
						<br><br>
						<div class="row">
							<div class="col-md-3"></div>
							<div class="col-md-6">
								<h3>Add new Book</h3>
							</div>
						</div>
						<br>
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<input asp-for="Name" type="text" class="form-control" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg" placeholder="Book Name">
									<span asp-validation-for="Name"></span>
								</div>
							</div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<select class="form-control form-select" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg" placeholder="Author" asp-for="AuthorID"
											asp-items="@(new SelectList(ViewBag.AllAuthors,"ID","Name")) ">
										<option disabled selected>Select Author</option>
									</select>
									<span asp-validation-for="AuthorID"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<input asp-for="Publisher" type="text" class="form-control" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg" placeholder="Publisher">
									<span asp-validation-for="Publisher"></span>
								</div>
							</div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<input asp-for="Desc" type="text" class="form-control" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg" placeholder="Book describtion">
									<span asp-validation-for="Desc"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<input asp-for="Topic" type="text" class="form-control" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg" placeholder="Book Tobic">
									<span asp-validation-for="Topic"></span>
								</div>
							</div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<select asp-for="Rights" class="form-control form-select" aria-label="Sizing example input"
											aria-describedby="inputGroup-sizing-lg" required>
										<option value="">Property rights</option>
										<option>Yes</option>
										<option>No</option>
									</select>
									<span asp-validation-for="Rights"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<input asp-for="Pages" type="number" class="form-control" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg" placeholder="Pages">
									<span asp-validation-for="Pages"></span>
								</div>
							</div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<select asp-for="Category" class="form-control form-select" aria-label="Sizing example input"
											aria-describedby="inputGroup-sizing-lg" required>
										<option value="">Category</option>
										<option>Medicine</option>
										<option>sciences</option>
										<option>Engineering</option>
										<option>literature</option>
										<option>space scince</option>
									</select>
									<span asp-validation-for="Category"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<select asp-for="Language" class="form-control form-select" aria-label="Sizing example input"
											aria-describedby="inputGroup-sizing-lg" required>
										<option value="">Book Language</option>
										<option>Arabic</option>
										<option>English</option>
										<option>German</option>
										<option>Spanish</option>
										<option>Hindi</option>
									</select>
									<span asp-validation-for="Language"></span>
								</div>
							</div>
							<div class="col-md-3 mb-3">
								<div class="input-group input-group-lg">
									<input asp-for="PubDate" type="date" class="form-control" aria-label="Sizing example input"
										   aria-describedby="inputGroup-sizing-lg">
									<span asp-validation-for="PubDate"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-3 mb-3">
								<label asp-for="ImageURL"></label>
								<input type="file" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg" placeholder="Choose Image" name="imageFile" id="imageFile" accept=".png,.jpg" onchange="AddImage()">
							</div>
							<div class="col-md-3 mb-3">

								<div class="input-group input-group-lg">
									<img width="200px" height="200px" src="" id="bookImage" />
								</div>
							</div>
						</div>

						<div class="row">

							<div class="col-md-2"></div>

							<div class="col-md-3 mb-3">
								...
								<span class="me-2">Choose Word File</span>
								<input type="file" class="form-control" aria-label="Sizing example input"
									   aria-describedby="inputGroup-sizing-lg" placeholder="Choose Word File">

							</div>
						</div>
						<br><br><br>
						<div class="row">
							<div class="col-md-4"></div>
							<div class="col-md-5">
								<button style="width: 200px;" type="submit" class="btn btn-primary btn-lg">Add</button>
							</div>
							<br />
						</div>
						<br />

					</div>
					<br />
				</main>
			</form>
