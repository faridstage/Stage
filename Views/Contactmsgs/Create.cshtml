@model Stage_Books.Models.Contact.Contactmsg

@{
    ViewData["Title"] = "Create";
}

<head >
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <title>S T A G E</title>
    <meta name="viewport" content="width=device-width, initial-scale=6">
    <meta name="descrption" content="Best website to Find any Books">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="css/style.css" rel="stylesheet">
</head>
<body oncontextmenu="return false;">

        <div class="row" style="margin:0 auto; text-align:center">
            <br />
            <br />
         
          
            <br />
        </div>


     <div class="row">
        <div class="col-md-1 col-1">

        </div>
        <div class="col-md-5 col-12">
            
               <h1>Send Message</h1>
                 <br />
            <hr />
            <h4>
                @Stage_Books.languages.Resource.You_Can_Contact_Us___Ask_About_Anything_And_We_Responce_on_Your_E_Mail_Address
            </h4>
            <br />
            <h5 style="color: blue;">@Stage_Books.languages.Resource.Or_Visit_us_On:</h5>
            <br> 
                <div class="row">
                    <img src="/img/facebook.png" alt="Facebook" title="Facebook" width="30" height="30"
                         style="margin-left: 25px;margin-top: 5px;"> <a class="nav-link" href="#" style="color:white;">
                        Home <span class="sr-only">(current)</span>
                    </a>
                </div>
                <div class="row">
                    <img src="/img/twitter.jpg" alt="Facebook" title="Facebook" width="30" height="30"
                         style="margin-left: 25px;margin-top: 5px;"> <a class="nav-link" href="#" style="color:white;">
                        Home <span class="sr-only">(current)</span>
                    </a>
                </div>
                <div class="row">
                    <img src="/img/youtube.jpg" alt="Facebook" title="Facebook" width="30" height="30"
                         style="margin-left: 25px;margin-top: 5px;"> <a class="nav-link" href="#" style="color:white;">
                        Home <span class="sr-only">(current)</span>
                    </a>
                </div>
        </div>

            <div class="col-md-5 col-12">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Your Name" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mail" class="control-label">E-Mail</label>
                <input asp-for="mail" class="form-control" placeholder="Enter Your E-Mail" required />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="title" class="control-label">Title</label>
                <input asp-for="title" class="form-control" placeholder="Enter Title Message" required/>
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="body" class="control-label"></label>

               <textarea asp-for="body" class="form-control" rows="7" placeholder="Enter Message" required style="resize:none"></textarea>
                <span asp-validation-for="body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary btn-lg btn-block" />
             </div>
             </form>
            <div>
           <a asp-controller="Home" asp-action="Index">Back to Homet</a>
        </div>
    </div>
        </div>
     



<
